<!DOCTYPE html>
<html>
<head>
  <title>dymmyd</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <%= image_tag "brain.svg" %>
      <% end %> 
      <!--Icons made by <a href="http://www.flaticon.com/authors/madebyoliver" title="Madebyoliver">Madebyoliver</a> -->
      <!--from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a> -->
      <!--is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a>-->
    </div>
    
    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "Portfolio", portfolio_path %></li>
      <li><%= link_to "About", about_path %></li>
      
    </ul>
  
    <ul>
      <li class="category">Social</li>
      <li><a href="https://www.github.com/ver2point0">Github</a></li>
      <li><a href="https://www.twitter.com/ver2point0">Twitter</a></li>
      <li><a href="https://www.linkedin.com/in/ver2point0">LinkedIn</a></li>
      <li><a href="mailto:jawm22@gmail.com">Email</a></li>
    </ul>
    
    <% if !user_signed_in? %>
      <p class="sign_in">Admin Login</p>
    <% end %>
  </div>
  
  <div id="main_content">
    <div id="header">
      <% if current_page?(root_path) %>
        <p>All Posts</p>
      <% elsif current_page?(about_path) %>
        <p>About</p>
      <% elsif current_page?(portfolio_path) %>
        <p>Portfolio</p>
      <% else %>
        <%= link_to "Back to All Posts", root_path %>
      <% end %>
      
      <% if user_signed_in? %>
        <div class="buttons">
          <button class="button"><%= link_to "New Post", new_post_path %></button>
          <button class="button">Log Out</button>
        </div>
      <% end %>
    </div>
    
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
    
    <%= yield %>
  </div>
  
</body>
</html>
